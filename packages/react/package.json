{
  "name": "sdk-react",
  "version": "0.0.0",
  "private": true,
  "description": "Sanity SDK React toolkit for Content OS",
  "keywords": [],
  "homepage": "https://github.com/sanity-io/sdk#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/sdk.git"
  },
  "license": "MIT",
  "author": "Sanity <developers@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components": {
      "source": "./src/components/index.ts",
      "import": "./dist/components/index.js",
      "default": "./dist/components/index.js"
    },
    "./hooks": {
      "source": "./src/hooks/index.ts",
      "import": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pkg build --strict --clean --check",
    "clean": "rimraf dist",
    "dev": "pkg watch",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "ts:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "browserslist": "extends @sanity/browserslist-config",
  "prettier": "@sanity/prettier-config",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@sanity/pkg-utils": "^6.11.7",
    "@sanity/prettier-config": "^1.0.3",
    "@storybook/react": "^8.3.6",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sdk-core": "workspace:*",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.0.0"
  }
}
