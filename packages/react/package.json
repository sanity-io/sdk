{
  "name": "@sanity/sdk-react",
  "version": "0.0.0",
  "private": true,
  "description": "Sanity SDK React toolkit for Content OS",
  "keywords": [],
  "homepage": "https://github.com/sanity-io/sdk#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/sdk.git"
  },
  "license": "MIT",
  "author": "Sanity <developers@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/_exports/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components": {
      "source": "./src/_exports/components.ts",
      "import": "./dist/components.js",
      "default": "./dist/components.js"
    },
    "./hooks": {
      "source": "./src/_exports/hooks.ts",
      "import": "./dist/hooks.js",
      "default": "./dist/hooks.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "components": [
        "./dist/components.d.ts"
      ],
      "hooks": [
        "./dist/hooks.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pkg build --strict --clean --check",
    "clean": "rimraf dist",
    "dev": "pkg watch",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "ts:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "browserslist": "extends @sanity/browserslist-config",
  "prettier": "@sanity/prettier-config",
  "dependencies": {
    "@sanity/sdk": "workspace:*",
    "@sanity/ui": "^2.8.19",
    "styled-components": "^6.1.13",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@repo/config-eslint": "workspace:*",
    "@repo/config-eslint-jsdoc": "workspace:*",
    "@repo/package.config": "workspace:*",
    "@sanity/pkg-utils": "^6.11.9",
    "@sanity/prettier-config": "^1.0.3",
    "@storybook/react": "^8.4.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "2.1.4",
    "eslint": "^9.16.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "@sanity/sdk": "*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0"
  }
}
