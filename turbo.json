{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DEBUG",
    "DEV",
    "VISUALIZER",
    "PKG_VERSION",
    "NPM_CONFIG_PROVENANCE",
    "CI",
    "SDK_E2E_*",
    "RECAPTCHA_E2E_STAGING_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:bundle": {
      "dependsOn": ["^build:bundle"],
      "outputs": ["lib/**"]
    },
    "build:docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "ts:check": {
      "dependsOn": ["^ts:check"]
    },
    "clean": {},
    "cleanup": {
      "cache": false,
      "env": ["SDK_E2E_*"]
    },
    "depcheck": {
      "env": ["DEPCHECK"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["SANITY_INTERNAL_ENV"]
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "dev:e2e": {
      "persistent": true,
      "cache": false,
      "env": ["SDK_E2E_*", "SANITY_INTERNAL_ENV"]
    },
    "lint": {
      "cache": false
    },
    "test": {
      "env": ["DEBUG", "NODE_ENV"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "cache": false,
      "env": ["SDK_E2E_*", "NODE_ENV", "RECAPTCHA_E2E_STAGING_KEY"],
      "dependsOn": ["@repo/e2e#build"],
      "outputs": ["e2e/test-results/**", "e2e/test-report/**"]
    },
    "@repo/e2e#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["^build"],
      "env": ["SANITY_AUTH_TOKEN"]
    }
  }
}
