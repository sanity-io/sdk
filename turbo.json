{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DEV", "VISUALIZER", "PKG_VERSION"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "docs": {},
    "lint": {
      "cache": false
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    }
  }
}
