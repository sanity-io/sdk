{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DEV", "VISUALIZER", "PKG_VERSION", "NPM_CONFIG_PROVENANCE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:bundle": {
      "dependsOn": ["^build:bundle"],
      "outputs": ["lib/**"]
    },
    "build:docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {},
    "cleanup": {
      "cache": false
    },
    "depcheck": {
      "env": ["DEPCHECK"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "dev:e2e": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["@repo/e2e#build"],
      "outputs": ["e2e/test-results/**", "e2e/test-report/**"]
    },
    "@repo/e2e#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    }
  }
}
