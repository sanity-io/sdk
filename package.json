{
  "name": "sdk",
  "version": "0.0.0",
  "description": "Sanity SDK for Content OS",
  "keywords": [],
  "homepage": "https://github.com/sanity-io/sdk#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/sdk.git"
  },
  "license": "MIT",
  "author": "Sanity <developers@sanity.io>",
  "sideEffects": false,
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "dev:kitchensink": "(cd apps/kitchensink-react && pnpm run dev)",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "turbo run lint -- --fix",
    "prepare": "husky",
    "storybook:dev": "turbo run dev --filter={storybook,sdk-react,sdk-core} --parallel",
    "test": "turbo run test --filter='./packages/*'",
    "test:watch": "turbo run test:watch --filter='./packages/*'",
    "ts:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@sanity/pkg-utils": "^6.11.7",
    "@sanity/prettier-config": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.0.0"
  }
}
